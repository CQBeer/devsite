// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-default = #666
color-gray = #999
color-border = #e8e8e8
color-navy = #2e5ddf
color-link = #85bc43
color-link-hover = lighten(color-link, 10%)
color-article-title = #333

// Typography
font-sans = Helvetica, Gothom,"Microsoft YaHei","Helvetica Neue", Arial, sans-serif
font-serif = Helvetica,Gothom,"Microsoft YaHei",Garamond, Georgia, "Times New Roman", serif
font-mono = Helvetica,Gothom,"Microsoft YaHei","Source Code Pro", Monaco, Menlo, Consolas, monospace
font-title = Helvetica,Gothom,"Microsoft YaHei",Lato, font-sans
font-size = 100%
line-height = 1.6em

// Layout
max-width = 1024px
gutter-width = 20px
sidebar-width = 220px
mobile-nav-width = 260px

// Media queries
mq-mobile = "screen and (max-width: 768px)"
mq-normal = "screen and (min-width: 769px)"
mq-tablet = "screen and (min-width: 480px)"
